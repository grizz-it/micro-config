{
    "name": "grizz-it/micro-config",
    "keywords": [
        "configuration"
    ],
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "doctrine/dbal": "^3.4"
    },
    "authors": [
        {
            "name": "GrizzIT",
            "homepage": "https://www.grizzit.com/",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "GrizzIt\\MicroConfig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GrizzIt\\MicroConfig\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/phpunit.xml"
        ]
    }
}
